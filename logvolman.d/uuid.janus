#!/usr/bin/bash

set -e

lsblk

echo "Which disk do you want to get the UUID?
"
read disk

sudo blkid | grep $disk > blkid.tmp

awk '/LVM/ { print $0 }' ./blkid.tmp > uuid.tmp

sed 's/\"//g; s/\UUID=//g' ./uuid.tmp > uuid1.tmp

awk '/LVM/ { print $2 }' ./uuid1.tmp > uuid2.tmp

cat ./uuid2.tmp

rm -f *.tmp
